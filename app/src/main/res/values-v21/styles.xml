<resources>

    <attr name="dropIconDrawable" format="reference"/>
    <attr name="windIconDrawable" format="reference"/>
    <attr name="chartTempColor" format="reference"/>
    <attr name="chartPrecipColor" format="reference"/>
    <attr name="searchIconDrawable" format="reference"/>
    <attr name="myLocationDrawable" format="reference"/>
    <attr name="starDrawable" format="reference"/>
    <attr name="navigationIconColor" format="reference"/>
    <attr name="humidityIconDrawable" format="reference"/>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/precipLightBlue</item>
        <item name="colorPrimaryDark">@color/precipLightBlue</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <item name="android:textColor">@color/greyText</item>
        <item name="tabStyle">@style/TabLayoutLight</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="navigationIconColor">@color/greyText</item>

        <item name="dropIconDrawable">@drawable/drop_light</item>
        <item name="windIconDrawable">@drawable/wind_light</item>
        <item name="humidityIconDrawable">@drawable/ic_humidity_light</item>
        <item name="chartTempColor">@color/greyText</item>
        <item name="chartPrecipColor">@color/precipLightBlue</item>
        <item name="searchIconDrawable">@drawable/ic_search_light</item>
        <item name="myLocationDrawable">@drawable/ic_my_location_light</item>
        <item name="starDrawable">@drawable/star_button_light</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="tabStyle">@style/TabLayoutDark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="navigationIconColor">@android:color/white</item>

        <item name="dropIconDrawable">@drawable/drop_dark</item>
        <item name="windIconDrawable">@drawable/wind_dark</item>
        <item name="humidityIconDrawable">@drawable/ic_humidity_dark</item>
        <item name="chartTempColor">@android:color/white</item>
        <item name="chartPrecipColor">@color/precipLightBlue</item>
        <item name="searchIconDrawable">@drawable/ic_search_dark</item>
        <item name="myLocationDrawable">@drawable/ic_my_location_dark</item>
        <item name="starDrawable">@drawable/star_button_dark</item>
    </style>
    
    <style name="ToolbarThemeLight" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@color/greyText</item>
    </style>

    <style name="ToolbarThemeDark" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="PreferencesLight" parent="LightTheme">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/precipBlueDark</item>
    </style>

    <style name="PreferencesDark" parent="DarkTheme">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/precipBlueDark</item>
    </style>

    <style name="TabLayoutLight" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/greyText</item>
        <item name="tabTextColor">@color/greyText</item>
    </style>

    <style name="TabLayoutDark" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabTextColor">@android:color/white</item>
    </style>

    <style name="LightTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
